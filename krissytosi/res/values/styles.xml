<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="KrissyTosiTheme" parent="@style/Theme.Sherlock.Light">
        <item name="android:textColor">@color/kt_dark_grey</item>
    </style>

    <style name="KTText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="KTPrimaryHeaderText" parent="KTText">
        <item name="android:textSize">@dimen/kt_text_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="KTSecondaryHeaderText" parent="KTText">
        <item name="android:textSize">@dimen/kt_text_large</item>
    </style>

    <style name="KTParagraphText" parent="KTText">
        <item name="android:textSize">@dimen/kt_text</item>
    </style>

    <style name="KTRunnerText" parent="KTParagraphText">
        <item name="android:textColor">@color/kt_light_grey</item>
    </style>

    <style name="KTContactText" parent="KTParagraphText">
        <item name="android:padding">@dimen/dbl</item>
        <item name="android:layout_width">match_parent</item>
    </style>

</resources>